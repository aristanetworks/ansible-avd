{# leaf switch configuration  #}
## Ansible Generated ##

### {{ inventory_hostname }} ###

{# set leaf variables #}
{% set switch = namespace() %}
{% set leaf = namespace() %}
{% for l2leaf_node_group in l2leafs.node_groups | natural_sort %}
{%     for node in l2leafs.node_groups[l2leaf_node_group].nodes | natural_sort %}
{%         if node == inventory_hostname %}
{%             if l2leafs.node_groups[l2leaf_node_group].spanning_tree_priority is defined %}
{%                 set leaf.spanning_tree_priority = l2leafs.node_groups[l2leaf_node_group].spanning_tree_priority %}
{%             else %}
{%                 set leaf.spanning_tree_priority = l2leafs.defaults.spanning_tree_priority %}
{%             endif %}
{%             if l2leafs.node_groups[l2leaf_node_group].platform is defined %}
{%                 set switch.platform = l2leafs.node_groups[l2leaf_node_group].platform %}
{%             else %}
{%                 set switch.platform = l2leafs.defaults.platform %}
{%             endif %}
{%             set leaf.group = l2leaf_node_group %}
{%             set leaf.id = l2leafs.node_groups[l2leaf_node_group].nodes[node].id %}
{%             set leaf.mgmt_ip = l2leafs.node_groups[l2leaf_node_group].nodes[node].mgmt_ip %}
{%             if loop.length == 2 %}
{%                 set leaf.mlag = true %}
{%                 set leaf.mlag_group = l2leaf_node_group %}
{%                 if l2leafs.node_groups[l2leaf_node_group].mlag_interfaces is defined %}
{%                     set leaf.mlag_interfaces = l2leafs.node_groups[l2leaf_node_group].mlag_interfaces %}
{%                 else %}
{%                     set leaf.mlag_interfaces = l2leafs.defaults.mlag_interfaces %}
{%                 endif %}
{%                 if loop.index == 1 %}
{%                     set leaf.mlag_role = "primary" %}
{%                     set leaf.mlag_peer = loop.nextitem %}
{%                     set leaf.mlag_ip = (( l2leafs.node_groups[l2leaf_node_group].nodes[node].id -1 ) * 2 ) %}
{%                     set leaf.mlag_peer_ip = ((( l2leafs.node_groups[l2leaf_node_group].nodes[node].id -1 ) * 2 ) +1 ) %}
{%                     set leaf.mlag_peer_id = l2leafs.node_groups[l2leaf_node_group].nodes[loop.nextitem].id %}
{%                 elif loop.index == 2 %}
{%                     set leaf.mlag_role = "secondary" %}
{%                     set leaf.mlag_peer = loop.previtem %}
{%                     set leaf.mlag_ip = ((( l2leafs.node_groups[l2leaf_node_group].nodes[loop.previtem].id -1 ) * 2 ) +1 ) %}
{%                     set leaf.mlag_peer_ip = (( l2leafs.node_groups[l2leaf_node_group].nodes[loop.previtem].id -1 ) * 2 )  %}
{%                     set leaf.mlag_peer_id = l2leafs.node_groups[l2leaf_node_group].nodes[loop.previtem].id  %}
{%                 endif %}
{%             else %}
{%                 set leaf.mlag = false %}
{%             endif %}
{%         endif %}
{%     endfor %}
{% endfor %}
### Leaf Info ###
l2leaf_node_group: {{ leaf.group }}
platform: {{ switch.platform }}
leaf_id: {{ leaf.id }}
leaf_mgmt_ip: {{ leaf.mgmt_ip }}
leaf_mlag: {{ leaf.mlag }}
{% if leaf.mlag == true %}
leaf_mlag_group: {{ leaf.mlag_group }}
leaf_mlag_role: {{ leaf.mlag_role }}
leaf_mlag_peer: {{ leaf.mlag_peer }}
leaf_mlag_ip: {{ leaf.mlag_ip }}
leaf_mlag_peer_ip: {{ leaf.mlag_peer_ip }}
leaf_mlag_peer_id: {{ leaf.mlag_peer_id }}
{% endif %}


