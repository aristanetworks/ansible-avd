{# leaf mlag vlan interfaces #}
vlan_interfaces:
{% if switch.mlag_ibgp is arista.avd.defined(true) %}
  Vlan4093:
    description: MLAG_PEER_L3_PEERING
    shutdown: false
{%     if underlay_rfc5549 is arista.avd.defined(true) %}
    ipv6_enable: true
{%     else %}
    ip_address: {{ mlag_ips.leaf_peer_l3 | ipaddr('network') | ipmath(switch.mlag_ip ) }}/31
{%     endif %}
    mtu: {{ p2p_uplinks_mtu }}
{%     if switch.underlay_routing_protocol == "ospf" %}
    ospf_network_point_to_point: true
    ospf_area: {{ underlay_ospf_area }}
{%     endif %}
{%     if switch.underlay_routing_protocol == "isis" %}
    isis_enable: EVPN_UNDERLAY
    isis_metric: 50
    isis_network_point_to_point: true
{%     endif %}
{% endif %}
  Vlan4094:
    description: MLAG_PEER
    shutdown: false
    ip_address: {{ mlag_ips.mlag_peer | ipaddr('network') | ipmath(switch.mlag_ip) }}/31
    mtu: {{ p2p_uplinks_mtu }}
    no_autostate: true
{##}
