{# eos - IP Routing #}
{% if ip_routing is arista.avd.defined %}
{%     if ip_routing == true %}
!
ip routing
{%     else %}
!
no ip routing
{%     endif %}
{% endif %}
{% if vrfs is arista.avd.defined %}
{%     for vrf in vrfs | arista.avd.natural_sort %}
{%             if vrfs[vrf].ip_routing == true and vrf is ne 'default' %}
ip routing vrf {{ vrf }}
{%             elif vrfs[vrf].ip_routing == false and vrf is ne 'default' %}
no ip routing vrf {{ vrf }}
{%             endif %}
{%     endfor %}
{% endif %}
{% if ip_icmp_redirect is arista.avd.defined(false) %}
no ip icmp redirect
{% endif %}